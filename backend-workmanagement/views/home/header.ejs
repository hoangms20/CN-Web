<div id="header">
    <link rel="stylesheet" href="../../public/css/home/header.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;200;300;400;500;700&family=Lora:ital,wght@1,400;1,500;1,600&family=Outfit:wght@200;400;500;700;800&family=Varela+Round&display=swap" rel="stylesheet">
    <div class="nav">
        <div class="left-nav">
            <img src="../../public/img/auth/favico.svg" alt="logo">
            <h1>Trello</h1>
        </div>
        <div class="right-nav">
            <% if(isLogin) { %>
                <div class="search">
                    <input type="text">
                    <i class="fas fa-search"></i>
                </div>
                <i class="far fa-bell"></i>
                    <div class="avatar" id="avatar">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="avartar">
                    </div>
            <% } else { %>
                <a href="/api/auth/login">Đăng nhập</a>
                <a href="/api/auth/register">Đăng ký</a>
            <% } %>
        </div>
    </div>
    
    <% if(isLogin) {%>
        <div class="setting-user" id="setting-user">
            <p>Account</p>
            <div class="account">
                <div class="avatar">
                    <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="avartar">
                </div>
                <div class="infor">
                    <h5><%- user.username %></h5>
                    <p><%- user.email %></p> 
                </div>
            </div>
            <a href="/api/auth/logout">Đăng xuất</a>
        </div>
    <% } %>  
</div>

<script src="../../public/js/index.js" type="text/javascript"></script>
